<% if @project.errors.any? %>
  <div class="error_explanation">
    <%=pluralize @project.errors.count, "error" %> prohibiting this project from being created:
  </div>

  <ul>
    <% @project.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<h2>New Project</h2>
<%= form_for(@project) do |f| %>   
  <p>    
    <%= f.label :name %><br />    
    <%= f.text_field :name %>  
  </p>
  <p>    
    <%= f.label :description %><br />    
    <%= f.text_field :description %>  
  </p>
  <%= f.submit %> 
<% end %>